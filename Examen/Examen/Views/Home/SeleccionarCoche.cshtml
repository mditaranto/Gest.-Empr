@{
}

<p>Seleccione una mision</p>
@using (Html.BeginForm("SeleccionarCoche", "Home", FormMethod.Post))
{
    <select name="IdMarca">

        @foreach (clsMarcas marcas in Model.ListaDeMarcas)
        {
            @if (Model.IdMarca != 0 && Model.IdMarca == marcas.Id)
            {
                <option selected value="@Model.IdMarca">@Model.MarcaElegida.Nombre</option>
            }
            else
            {
                <option value="@marcas.Id">@marcas.Nombre</option>
            }
        }

    </select>
    <button type="submit" action="SeleccionarCoche">Ver detalles</button>
}

@if (Model != null && Model.IdMarca != 0)
{
    @foreach (clsCoche coche in Model.ListaDeCochesElegida)
    {
        <p>@coche.Nombre       @Html.ActionLink("Cambiar Precio", "EditarPrecio", "Home", new {coche.Id})</p>
    }
}


